# Flask настройки
FLASK_APP=hrai.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
WTF_CSRF_ENABLED=True
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here

# База данных
DB_NAME=hr_manager
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Email настройки
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@hrmanager.com

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Шифрование и безопасность
ENCRYPTION_KEY=your-encryption-key-here
ENCRYPTION_OPTIONS=compress-algo=0, cipher-algo=aes256, s2k-mode=3, s2k-count=65536

# Директории для загрузки файлов
UPLOAD_FOLDER=app/uploads
UPLOAD_FOLDER_RESUMES=app/uploads/resumes
UPLOAD_FOLDER_PHOTOS=app/uploads/photos
UPLOAD_FOLDER_TEMP=app/uploads/temp

# Redis для фоновых задач
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@localhost:6379/0

# Логирование
LOG_LEVEL=INFO
LOG_FILENAME=logs/hr_manager.log 